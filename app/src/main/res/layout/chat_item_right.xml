<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/imgContato"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_account_circle_black_36dp"
            android:backgroundTint="#2196F3"
            android:foreground="@drawable/round_account_circle_black_36dp"
            android:foregroundTint="#00FFFFFF"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/show_mesage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgContato"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:text="hello"
            android:textColor="#FFF"
            android:padding="8dp"
            android:textSize="12dp"
            android:background="@drawable/background_right"/>

    </RelativeLayout>
</RelativeLayout>

